<Window x:Class="WpfAppSimple.ProfileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppSimple"
        mc:Ignorable="d"
        Title="Profile" Height="320" Width="600" ResizeMode="NoResize">
    <Grid>
        
        <Label Content="Profile" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" HorizontalContentAlignment="Center" FontSize="24" FontWeight="Bold"/>
        <Image Name="imgPhoto" HorizontalAlignment="Left" Height="200" Margin="50,52,0,0" VerticalAlignment="Top" Width="200"/>
        <Label x:Name="lblName" Content="Name" HorizontalAlignment="Left" Margin="260,52,0,0" VerticalAlignment="Top" FontSize="22" FontWeight="Bold"/>
        <Label x:Name="lblGender" Content="Gender" HorizontalAlignment="Left" Margin="260,91,0,0" VerticalAlignment="Top" FontSize="18" FontWeight="Bold"/>
        <Label x:Name="lblPhone" Content="Phone" HorizontalAlignment="Left" Margin="260,125,0,0" VerticalAlignment="Top" FontSize="18" FontWeight="Bold"/>
        <Label x:Name="lblDateCreated" Content="DateCreated" HorizontalAlignment="Left" Margin="260,159,0,0" VerticalAlignment="Top" FontSize="18" FontWeight="Bold"/>

    </Grid>
    
</Window>
